@model MovieDetailsViewModel
@{
    ViewData["Title"] = "Movie Details";
}

@Html.ActionLink("Back to List", "Index", null,null, new { @class = "btn btn-secondary btn-lg" })
<div class="container">
    <div class="card movie-details-card">
        <div class="movie-details-poster-container">
            <a href="https://youtu.be/@Model.VideoIdentifier" target="_blank">
                <img src="https://i.ytimg.com/vi_webp/@Model.PosterIdentifier/movieposter.webp" class="movie-details-poster img-fluid" alt="Poster for @Model.Title" />
            </a>
        </div>
        <div class="movie-details-content">
            <h1 class="movie-details-title">@Model.Title</h1>
            <div class="movie-details-info">
                <p><strong>Year:</strong> @Model.ReleaseYear</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Description:</strong> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
            </div>
            <div class="movie-details-actions">
                @Html.ActionLink("Edit", nameof(MovieController.Edit), new { id = Model.Id }, new { @class = "btn btn-warning btn-lg" })
                @Html.ActionLink("Delete", nameof(MovieController.Delete), new { id = Model.Id }, new { @class = "btn btn-danger btn-lg" })
            </div>
        </div>
    </div>
</div>