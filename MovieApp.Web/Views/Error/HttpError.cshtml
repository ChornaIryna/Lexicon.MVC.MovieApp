    ViewData["Title"] = "Error";
}
<div class="container text-center py-5">
    <h1 class="display-1 text-danger">@Model</h1>
    <p class="lead">
        Vi är ledsna, men sidan du letar efter verkar inte finnas. Den kan ha flyttats, tagits bort, eller så stavade du fel.
    </p>

    <div class="mt-5">
        <h3>Vad kan du göra?</h3>
        <ul class="list-unstyled">
