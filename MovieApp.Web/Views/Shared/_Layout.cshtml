
<!DOCTYPE html>
<html lang="se">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie App</title>
    @* <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css" /> *@
    <link href="~/styles/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/style.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <h1>@ViewData["Title"]</h1>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2025 - Movie App. Webmaster: Iryna Chorna</p>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js"
            asp-fallback-test ="window.bootstrap"
            asp-fallback-src="~/scripts/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.7.1.min.js"
            asp-fallback-test="window.jQuery"
            asp-fallback-src="~/scripts/lib/jquery/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>